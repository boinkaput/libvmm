<system>
    <!-- We allocate 256MiB of RAM for the guest. -->
    <memory_region name="guest_ram" size="0x40_000_000" page_size="0x200_000" />
    <!-- UART for basic input/output -->
    <memory_region name="uart" size="0x1_000" phys_addr="0xfe215000" />
    <!-- To boot Linux, we need to map in the GIC virtual CPU interface. -->
    <memory_region name="gic_vcpu" size="0x1_000" phys_addr="0xff846000" />

    <protection_domain name="VMM" priority="254">
        <program_image path="vmm.elf" />
        <map mr="guest_ram" vaddr="0x20000000" perms="rw" setvar_vaddr="guest_ram_vaddr" />
        <virtual_machine name="linux" id="0">
            <map mr="guest_ram" vaddr="0x20000000" perms="rwx" />
            <map mr="uart" vaddr="0xfe215000" perms="rw" cached="false" />
            <!-- Map in the GIC vCPU region at the address of the GIC CPU address that Linux expects. -->
            <map mr="gic_vcpu" vaddr="0xff842000" perms="rw" cached="false" />
        </virtual_machine>
        <!-- UART IRQ -->
        <irq irq="125" id="1" />
    </protection_domain>
</system>

